@model ETickets.Models.Actor

@{
    ViewData["Title"] = $"{Model.FirstName} {Model.LastName} - Details";
}

<div class="container mt-4">
    <h1>@Model.FirstName @Model.LastName</h1>

    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <img src="~/images/cast/@(Model.ProfilePicture ?? "default-profile.png")" alt="@Model.FirstName @Model.LastName" style="max-width: 400px;" />
                    <h4>About @Model.FirstName</h4>

                </div>
                <div class="card-body">
                    
                    <p><strong>Bio:</strong> @Model.Bio</p>
                    <p><strong>News:</strong> @Model.News</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-outline-primary" asp-controller="Movies" asp-action="Index">Back to List</a>
                    <a class="btn btn-outline-primary" >Social Media</a>

                </div>
            </div>
        </div>
    </div>
</div>
