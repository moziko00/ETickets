@{
    ViewData["Title"] = "Page Not Found";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container text-center my-5">
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">
                    <h1 class="display-4">404</h1>
                    <p class="lead">Oops! The Movie you are looking for could not be found.</p>
                    <hr class="my-4">
                    <p>It looks like the page might have been moved or deleted. Please check the URL or return to the homepage.</p>
                    <a class="btn btn-primary btn-lg" asp-controller="Movies" asp-action="Index">Go to Homepage</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
